<fest:template xmlns:fest="http://fest.mail.ru">
	<fest:include src="blocks/btn.xml"/>
	<div class="game-settings">
		<div class="game-settings__title">Выберите желаемое количество игроков</div>
		<select name="select" id="select" class="game-settings__select js-select">
			<option value="2">2 игрока</option>
			<option value="3">3 игрока</option>
			<option value="4">4 игрока</option>
			<option value="5">5 игроков</option>
		</select>
		<fest:get name="btn">{classes: ['js-send'], title: 'Готово'}</fest:get>
	</div>
</fest:template>
