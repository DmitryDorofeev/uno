<fest:template xmlns:fest="http://fest.mail.ru" context_name="profile">
    <fest:include src="blocks/btn.xml"/>
  <div class="profile">
      <div class="profile__title"> Профиль </div> 
        <div class="email-field">
            <div class="email-field__title"> E-mail: </div>
            <div class="email-field__value"> <fest:value>profile.email</fest:value> </div>
        </div>
        <form method="POST">
            <div class="login-field">
                <div class="login-field__title"> Логин: </div>
                <div class="login-field__input">
                    <input type="text" value="{profile.login}"/>
                </div>
            </div>
            <fest:get name="btn">{title: 'Сохранить'}</fest:get>
            <fest:get name="btn">{title: 'Logout', classes: ['js-logout']}</fest:get>
        </form>
  </div>
</fest:template>
